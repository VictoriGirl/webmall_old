%div.container-fluid
  %div.row
    = form_tag (search_services_choises_path), method: :get do
      %div.col-md-8
        %h4 Весь ассортимент услуг в ВебМолле
      %div.col-md-4
        %div.input-group
          %input.form-control{placeholder: "Поиск", type: "text", name: 'search'}
          %span.input-group-btn
            %button.btn.btn-primary{type: "submit"} Поехали!
  %div.row
    %div.col-md-12
    - if @resource.any?
      = will_paginate @resource, renderer: BootstrapPagination::Rails
      %br
      %table{:class => 'table table-striped table-bordered'}
        %thead
          %tr
            %td
              %b Название
            %td
              %b Категория услуги
            %td
              %b Описание
            %td
              %b В наличии
            %td
              %b Стоимость
            %td
              %b Магазин
            %td
              %b В последний раз купили:
        %tbody
          - @resource.each do |s|
            %tr
              %td
                = link_to "#{s.name}", services_choise_path(s)
              %td #{s.category}
              %td #{s.description}
              - if s.in_sight
                %td Да
              - else
                %td Нет
              %td #{'%.2f' % s.price} #{Ware::CURRENCIES.key(s.currency)}
              %td
                = link_to "#{s.store.name}", stores_choise_path(s.store.title)
              - if s.last_buying_date.present?
                %td #{s.last_buying_date.strftime("%m.%d.%Y")}
              - else
                %td Эту услугу еще никто не заказывал, станьте первым!
      = will_paginate @resource, renderer: BootstrapPagination::Rails
                    