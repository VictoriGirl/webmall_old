%div.container-fluid
  %div.row
    %div.col-md-12
      = link_to "Добавить новую услугу", new_store_service_path, :class => 'btn btn-default pull-left'
      = link_to "Вернуться в магазин", store_path(@store.title), :class => 'btn btn-default pull-right'
      %br
      %br
      - if @resource.any?
      = will_paginate @resource, renderer: BootstrapPagination::Rails
        %br
        %table{:class => 'table table-striped table-bordered'}
          %thead
            %tr
              %td
                %b Название
              %td
                %b Категория услуги
              %td
                %b Описание
              %td
                %b В наличии
              %td
                %b Стоимость
              %td
                %b Валюта
              %td
                %b В последний раз купили:
              %td
                %b Действия
          %tbody
            - @resource.each do |s|
              %tr
                %td #{s.name}
                %td #{s.category}
                %td #{s.description}
                - if s.in_sight
                  %td Да
                - else
                  %td Нет
                %td #{'%.2f' % s.price}
                %td #{Service::CURRENCIES.key(s.currency)}
                - if s.last_buying_date.present?
                  %td #{s.last_buying_date.strftime("%m.%d.%Y")}
                - else
                  %td Эту услугу еще никто не заказывал
                  %td
                    %p
                      = link_to "Подробнее", store_service_path(@store.title, s), class: "btn btn-default btn-xs btn-block"
                    %p
                      = link_to "Удалить", store_service_path(@store.title, s), method: :delete, class: "btn btn-danger btn-block btn-xs", data: { confirm: 'Вы уверены?' }
      = will_paginate @resource, renderer: BootstrapPagination::Rails