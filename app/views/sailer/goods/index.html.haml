%div.container-fluid
  %div.row
    = link_to "В офис", profile_path(@user.profile), class: "btn btn-default btn-sm"
    = link_to "В магазин", store_path(@store.title), class: "btn btn-default btn-sm"
  %div.row
    %p
    = link_to "Добавить новый товар", new_store_good_path, :class => 'btn btn-primary pull-left'
    %div.col-md-12
      - if @resource.any?
      = will_paginate @resource, renderer: BootstrapPagination::Rails
        %br
        %table{:class => 'table table-striped table-bordered'}
          %thead
            %tr
              %td
                %b Название
              %td
                %b Категория товара
              %td
                %b Описание
              %td
                %b В последний раз купили:
              %td
                %b Действия
          %tbody
            - @resource.each do |g|
              %tr
                %td #{g.name}
                %td #{g.category}
                %td #{g.description}
                - if g.last_buying_date.present?
                  %td #{g.last_buying_date.strftime("%m.%d.%Y")}
                - else
                  %td Этот товар еще никто не покупал
                  %td
                    %p
                      = link_to "Подробнее", store_good_path(@store.title, g), class: "btn btn-default btn-xs btn-block"
                    %p
                      = link_to "Удалить", store_good_path(@store.title, g), method: :delete, class: "btn btn-danger btn-block btn-xs", data: { confirm: 'Вы уверены?' }
      = will_paginate @resource, renderer: BootstrapPagination::Rails